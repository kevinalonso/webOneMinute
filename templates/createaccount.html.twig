{% extends "base.html.twig" %}

{% block body %}

	<div class="container mt-5">
        <div class="form">

        	<div class="note">
                <h1>Créez votre compte</h1>
            </div>

              <form method="post" onsubmit="createAccount()">

                <div class="form-content">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" id="lastname" placeholder="Votre Nom *" value=""/>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="firstname" placeholder="Votre Prénom *" value=""/>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="phone" placeholder="Téléphone *" value=""/>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" id="email" placeholder="Votre Email *" value=""/>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="password" placeholder="Votre Mot de passe *" value=""/>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="confirm" placeholder="Confirmer mot de passe *" value=""/>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 text-center">
                            <div class="form-group">
                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1" onclick="privRadio(this)">
                                <label class="form-check-label" for="inlineRadio1">Particulier*</label>
                            </div>
                        </div>

                        <div class="col-md-6 text-center">
                            <div class="form-group">
                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2" onclick="proRadio(this)">
                                <label class="form-check-label" for="inlineRadio2">Professionnel*</label>
                            </div>
                        </div>
                    </div>

                    <!--Partie professionnel-->
                    <div id="pro" class="row" style="display:none;">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="text" class="form-control" id="siret" placeholder="Numéro Siret " value=""/>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="text" class="form-control" id="factory" placeholder="Entreprise *" value=""/>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                 <input type="text" class="form-control" id="address" placeholder="Adresse *" value=""/>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                 <input type="text" class="form-control" id="cp" placeholder="Code Postale *" value=""/>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                 <input type="text" class="form-control" id="city" placeholder="Ville *" value=""/>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success btn-block mb-5">Enregister</button>
                </div>

              </form>

        </div>
    </div>

{% block javascripts %} 
    <script type="text/javascript" src="/oneminute/src/js/action.js"></script>
    <script type="text/javascript" src="/oneminute/src/js/ajaxCreate.js"></script>
{% endblock %}

{% endblock %}
{% extends "base.html.twig" %}

{% block body %}
	<div class="w-100 mt-5">
		<a href="{{ path('category', {'id': announcement[0].Category.id}) }}" class="mt-5 ml-7">Retour Catégorie</a>
	</div>
	
	<div class="container mt-60 mb-50">
		<div class="card">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-6">
						
						<div class="preview-pic tab-content">
							<img class="card-img-top" src="http://placehold.it/700x400" alt="">	  
						</div>
						
						
					</div>
					<div class="details col-md-6">
						<h3 class="product-title">{{announcement[0].Title}}</h3>
						
						<p class="product-description">{{announcement[0].Description}}</p>
						<h4 class="price">Prix : <span>{{announcement[0].Price}}€</span></h4>
						<!--<p class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p>-->
						
						<div class="action mb-3">
							{% if app.user %}
								<a href="#"class="btn btn-success btn-block" type="button">Payer le service</a>
							{% else %}
								<div class="alert alert-danger text-center" role="alert">
  									<span>Veuillez vous connecter pour payer</span>
								</div>
							{% endif %}
							
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
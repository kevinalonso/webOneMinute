{% extends "base.html.twig" %}

{% block body %}

	
	<div class="w-100 mt-5">
		<a href="{{ path('category', {'id': announcement[0].Category.id}) }}" class="mt-5 ml-7">Retour Catégorie</a>
	</div>

	<div class="container mt-60 mb-50">
		<div class="card">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-6">
						
						<div class="preview-pic tab-content">
							<img class="card-img-top" src="http://placehold.it/700x400" alt="">

							<a href="#">
								<div class="preview-pic tab-content mt-5" data-toggle="modal" data-target="#exampleModal">

									{% if (announcement[0].Image1 != null) %}
										<img class="img-thumbnail img-thumbnail-override" src="{{announcement[0].Image1}}" alt=""data-target="#carouselExample" data-slide-to="1">
									{% endif %}

									{% if (announcement[0].Image2 != null) %}
										<img class="img-thumbnail img-thumbnail-override" src="{{announcement[0].Image2}}" alt=""data-target="#carouselExample" data-slide-to="2">
									{% endif %}

									{% if (announcement[0].Image3 != null) %}
										<img class="img-thumbnail img-thumbnail-override" src="{{announcement[0].Image3}}" alt=""data-target="#carouselExample" data-slide-to="3">
									{% endif %}

									{% if (announcement[0].Image4 != null) %}
										<img class="img-thumbnail img-thumbnail-override" src="{{announcement[0].Image4}}" alt=""data-target="#carouselExample" data-slide-to="4">
									{% endif %}

									{% if (announcement[0].Image5 != null) %}
										<img class="img-thumbnail img-thumbnail-override" src="{{announcement[0].Image5}}" alt=""data-target="#carouselExample" data-slide-to="5">
									{% endif %}

									{% if (announcement[0].Image6 != null) %}
										<img class="img-thumbnail img-thumbnail-override" src="{{announcement[0].Image6}}" alt=""data-target="#carouselExample" data-slide-to="6">
									{% endif %}

									{% if (announcement[0].Image7 != null) %}
										<img class="img-thumbnail img-thumbnail-override" src="{{announcement[0].Image7}}" alt=""data-target="#carouselExample" data-slide-to="7">
									{% endif %}

									{% if (announcement[0].Image8 != null) %}
										<img class="img-thumbnail img-thumbnail-override" src="{{announcement[0].Image8}}" alt=""data-target="#carouselExample" data-slide-to="8">
									{% endif %}

									{% if (announcement[0].Image9 != null) %}
										<img class="img-thumbnail img-thumbnail-override" src="{{announcement[0].Image9}}" alt=""data-target="#carouselExample" data-slide-to="9">
									{% endif %}
								
								</div>
							</a>
						</div>
						
						
					</div>
					<div class="details col-md-6">
						<h3 class="product-title">{{announcement[0].Title}}</h3>
						
						<p class="product-description">{{announcement[0].Description}}</p>
						<h4 class="price">Prix : <span>{{announcement[0].Price}}€</span></h4>
						<!--<p class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p>-->
						
						<div class="action mb-3">
							{% if app.user %}
								<a href="{{ path('cart', {'id': announcement[0].Id}) }}"class="btn btn-success btn-block" type="button">Payer le service</a>
							{% else %}
								<div class="alert alert-danger text-center" role="alert">
  									<span>Veuillez vous connecter pour payer</span>
								</div>
							{% endif %}
							
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


		<!--Modal-->
	<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-hidden="true">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
	        <div id="carouselExample" class="carousel slide" data-ride="carousel">
	          <ol class="carousel-indicators">
	          	
	            {% if (announcement[0].Image1 != null) %}
	            	<li data-target="#carouselExample" data-slide-to="1" class="active"></li>
	            {% endif %}

	            {% if (announcement[0].Image1 != null) %}
	            	<li data-target="#carouselExample" data-slide-to="2"></li>
	            {% endif %}

	            {% if (announcement[0].Image3 != null) %}
	            	<li data-target="#carouselExample" data-slide-to="3"></li>
	            {% endif %}

	            {% if (announcement[0].Image4 != null) %}
	            	<li data-target="#carouselExample" data-slide-to="4"></li>
	            {% endif %}

	            {% if (announcement[0].Image5 != null) %}
	            	<li data-target="#carouselExample" data-slide-to="5"></li>
	            {% endif %}

	            {% if (announcement[0].Image6 != null) %}
	            	<li data-target="#carouselExample" data-slide-to="6"></li>
	            {% endif %}

	            {% if (announcement[0].Image7 != null) %}
	            <li data-target="#carouselExample" data-slide-to="7"></li>
	            {% endif %}

	            {% if (announcement[0].Image8 != null) %}
	            	<li data-target="#carouselExample" data-slide-to="8"></li>
	            {% endif %}

	            {% if (announcement[0].Image9 != null) %}
	            	<li data-target="#carouselExample" data-slide-to="9"></li>
	            {% endif %}

	          </ol>
	          <div class="carousel-inner">
	          	{% if (announcement[0].Image1 != null) %}
		            <div class="carousel-item active">
		              <img class="d-block w-100" src="{{announcement[0].Image1}}" alt="First slide">
		            </div>
	        	{% endif %}

	        	{% if (announcement[0].Image2 != null) %}
	            <div class="carousel-item">
	              <img class="d-block w-100" src="{{announcement[0].Image2}}" alt="Second slide">
	            </div>
	            {% endif %}

	            {% if (announcement[0].Image3 != null) %}
	            <div class="carousel-item">
	              <img class="d-block w-100" src="{{announcement[0].Image3}}" alt="Third slide">
	            </div>
	            {% endif %}

	            {% if (announcement[0].Image4 != null) %}
	            <div class="carousel-item">
	              <img class="d-block w-100" src="{{announcement[0].Image4}}" alt="Fourth slide">
	            </div>
	            {% endif %}

	            {% if (announcement[0].Image5 != null) %}
	            <div class="carousel-item">
	              <img class="d-block w-100" src="{{announcement[0].Image5}}" alt="Five slide">
	            </div>
	            {% endif %}

	            {% if (announcement[0].Image6 != null) %}
	            <div class="carousel-item">
	              <img class="d-block w-100" src="{{announcement[0].Image6}}" alt="Five six">
	            </div>
	            {% endif %}

	            {% if (announcement[0].Image7 != null) %}
	            <div class="carousel-item">
	              <img class="d-block w-100" src="{{announcement[0].Image7}}" alt="Five seven">
	            </div>
	            {% endif %}

	            {% if (announcement[0].Image8 != null) %}
	            <div class="carousel-item">
	              <img class="d-block w-100" src="{{announcement[0].Image8}}" alt="Five eight">
	            </div>
	            {% endif %}

	            {% if (announcement[0].Image9 != null) %}
	            <div class="carousel-item">
	              <img class="d-block w-100" src="{{announcement[0].Image9}}" alt="Five nine">
	            </div>
	            {% endif %}
	          </div>
	          <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
	            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
	            <span class="sr-only">Previous</span>
	          </a>
	          <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
	            <span class="carousel-control-next-icon" aria-hidden="true"></span>
	            <span class="sr-only">Next</span>
	          </a>
	        </div>
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
	      </div>
	    </div>
	  </div>
	</div>
	<!--EndModal-->

{% endblock %}
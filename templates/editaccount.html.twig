{% extends "base.html.twig" %}

{% block body %}

	<div class="container mt-5">
        <div class="form">

        	<div class="note">
                <h1>Modifier votre compte</h1>
            </div>

              <form method="post" action="{{ path('edituser') }}">

                <div class="form-content">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" name="lastname" id="lastname" placeholder="Votre Nom *" value="{{ user.getLastName }}"/>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="firstname" id="firstname" placeholder="Votre Prénom *" value="{{ user.getFirstName }}"/>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="phone" id="phone" placeholder="Téléphone *" value="{{user.getPhone}}"/>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" name="email" id="email" placeholder="Votre Email *" value="{{ user.getUsername }}"/>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="password" id="password" placeholder="Votre Mot de passe *" value=""/>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="confirm" id="confirm" placeholder="Confirmer mot de passe *" value=""/>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 text-center">
                            <div class="form-group">
                                <input class="form-check-input" type="radio" name="individual" id="inlineRadio1" value="option1" onclick="privRadio(this)">
                                <label class="form-check-label" for="inlineRadio1">Particulier*</label>
                            </div>
                        </div>

                        <div class="col-md-6 text-center">
                            <div class="form-group">
                                <input class="form-check-input" type="radio" name="pro" id="inlineRadio2" value="option2" onclick="proRadio(this)">
                                <label class="form-check-label" for="inlineRadio2">Professionnel*</label>
                            </div>
                        </div>
                    </div>

                    <!--Partie professionnel-->
                    <div id="pro" class="row" style="display:none;">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="text" class="form-control" name="siret" id="siret" placeholder="Numéro Siret " value=""/>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="text" class="form-control" name="factory" id="factory" placeholder="Entreprise *" value=""/>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                 <input type="text" class="form-control" name="address" id="address" placeholder="Adresse *" value="{{ user.getAddress }}"/>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                 <input type="text" class="form-control" name="cp" id="cp" placeholder="Code Postale *" value="{{ user.getCodePoste }}"/>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                 <input type="text" class="form-control" name="city" id="city" placeholder="Ville *" value="{{user.getCity}}"/>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success btn-block mb-5">Modifier</button>
                </div>

              </form>

        </div>
    </div>

{% block javascripts %} 
    <script type="text/javascript" src="/oneminute/src/js/action.js"></script>
{% endblock %}

{% endblock %}